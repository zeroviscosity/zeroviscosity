    nav.clearfix
      div.zv-logo-top
        div.zv-logo
      div.zv-logo-bottom
      ul.zv-nav
        li
          a(href="/") Home
        if pages && pages.length
          for page in pages
            li
              a(href="/#{page.slug}")=page.title

    div.zv-container
      block wrapper

