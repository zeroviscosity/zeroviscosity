doctype html
html(lang="en")
  head 
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="#{description}") 
    block head
    title=title
    link(rel="canonical", href="#{url}")
    link(rel="shortcut icon", type="image/x-icon", href="/favicon.ico")
    style.
      html { background: #efefef; }
      body { opacity: 0; }
  body 
    nav.clearfix
      div.zv-logo-top
        div.zv-logo
      div.zv-logo-bottom
      ul.zv-nav
        li
          a(href="/")
            span.icon.icon-home
            span.text Home
        if pages && pages.length
          for page in pages
            li
              a(href="/#{page.slug}")
                span.icon(class="icon-#{page.slug}")
                span.text=page.title

    div.zv-container
      block wrapper
    
    div.hide
      div#loading.loading-wrp-1
        div.loading-wrp-2
          div.loading
            div.loading-1
            div.loading-2

